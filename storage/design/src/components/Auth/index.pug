div.auth
	form.auth__popup
		button.auth__close
			include ../../../img/close.svg
		ul.auth__tabs-list
			li.auth__tab.auth__tab--active(data-id='1') Вход
			li.auth__tab(data-id='2') Регистрация
		div.auth__content-wrap
			div.auth__content
				div.auth__tab-content
					div.auth__field
						span.auth__placeholder Имя
						input.auth__input(type='text')
							
					div.auth__field
						span.auth__placeholder Фамилия
						input.auth__input(type='text')

					div.auth__field
						span.auth__placeholder Электронная почта
						input.auth__input(type='email')
					
					div.auth__field.auth__pass
						span.auth__placeholder Пароль
						input.auth__input(type='password')
						a.auth__pass-btn(href='#')
							include ../../../img/eye.svg
